@{
    ViewData["Title"] = "Home Page";

    var timeToBuy = ViewData["TimeToBuy"];
}


<style>

    .a1 {
        margin-left: 5px;
        color: burlywood;
        background-color: black; 
    } 

    .t1 { font-size: large;}

</style>


<div class="container">


    <div style='margin-left: 370px; margin-top:2%'>
        <div class="row">
            <font family="arial" font-size="60" style="color:burlywood">
                <h1 display-1> The Insurance Company</h1>
            </font>
        </div>
    </div>



    <div class="row-md-6" style="margin-top:2%; margin-bottom: 2%">

        <img alt="Second slide" src="~/pics/rock.jpg" class="r1"
             style="margin-left: 20%; width: 60%; height:50%;">

    </div>

    <div style='margin-left: 270px'>
        <div class="row justify-content-left">
            <font family="arial" font-size="large" style="color:lightgray">
                <h1 display-1><i> Now is the time to buy insurance!</i></h1>
            </font>
        </div>
    </div>


    <div id="footer" style="margin-left: 75px; margin-bottom: 10px;">
        <br>
        <!-- a60 additions at bottom -->
        <text class='btn t1' style="color:white;">2023 - A60Insurance - Blazor</text>

        <text class='btn t1' style='color:gray;'>Find out info here</text>

        <a class="a1" style="font-size: large; color: burlywood"
           asp-area="" asp-controller="Home" asp-action="Info">Info</a>

        <text class='t1' style='color:gray;'>Find about here...</text>
        <a class="a1" style="font-size: large; color: burlywood"
           asp-area="" asp-controller="Home" asp-action="About">About</a>

        <text class='t1' style='color:gray;'>Time to buy...</text>
        <a class="a1" style="font-size:large; color: burlywood"
           asp-area="" asp-controller="Home" asp-action="Register">@timeToBuy</a>

        <text class='t1' style='color:gray;'>or...</text>
        <a class="a1" style="font-size:large; color: burlywood"
           asp-area=" " asp-controller="Home" asp-action="SignIn">Sign in</a>

    </div>

</div>
