 
@{
    ViewData["Title"] = "Main Menu";
}
<!-- copied from a11 -->

<style>

    .title {
        margin-left: 440px;
        font-family: Arial;
        color: navajowhite;
    }


    .b1w {
        color: white;
        margin-left: 50px;
        margin-right: 20px;
        padding-left: 20px;
        padding-right: 20px;
        border-radius: 10px;
    }

    .r1 { border-radius: 10px; }

</style>

<div class="container"> 

    <h3 class="title"> Main Insurance Menu</h3> <br />

    <div class="row justify-content-center">

        <img alt="rock" src="~/pics/rock.jpg" class="r1" 
             width="380px" height="450px"/>  

    </div> <br />

    <div style="display:inline">

        <a type="button" class="b1w btn btn-primary" asp-controller="Home" asp-action="Update">Update Info</a>
        <a type="button" class="b1w btn btn-primary" asp-controller="Home" asp-action="Claim">File Claim</a>
        <a type="button" class="b1w btn btn-primary" asp-controller="Home" asp-action="History">Claim History</a>
        <a type="button" class="b1w btn btn-primary" asp-controller="Home" asp-action="Plan">Change Plan</a>
        <a type="button" class="b1w btn btn-primary" asp-controller="Home" asp-action="SignOut">Sign Out</a>


    </div>

    <div class="form-group row" style="margin-top: 10px; margin-left:350px;">
        <span style="color:navajowhite; font-size: x-large">
            @ViewData["MenuMessage"]
        </span>
    </div>

     

</div>
