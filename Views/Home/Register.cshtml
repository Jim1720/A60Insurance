@model A60Insurance.Models.Customer;

@{
    ViewData["Title"] = "Register";


    List<SelectListItem> States = new List<SelectListItem>()
    {
            new SelectListItem { Text = "WA", Value = "WA" },
            new SelectListItem { Text = "CA", Value = "CA" }
    };


    List<SelectListItem> Genders = new List<SelectListItem>()
    {

           new SelectListItem { Text = "M", Value = "M"},
           new SelectListItem { Text = "F", Value = "F"} 

    }; 
}



@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{

    <div class="container">

        <h4 margin="50px" align="center" style="color:burlywood">Register Customer</h4>
        <br />
        <div style='margin-left: 195px'>

            <div class="row justify-content-md-left">
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustId" class="st1 control-label style=" color:dodgerblue;"">Customer Id:</label>
                    <input asp-for="@Model.CustId" class="form-control" placeholder="Customer Id" type="text" />
                </div>
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustPassword" class="st1 control-label style=" color:dodgerblue;"">Password:</label>
                    <input asp-for="@Model.CustPassword" class="form-control" placeholder="Password" type="password" />
                </div>
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustPassword" class="st1 control-label style=" color:dodgerblue;"">Confirm Password:</label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                </div>

            </div> <!-- end row 1 -->

            <div class="row justify-content-md-left">
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustFirst" class="st1 control-label style=" color:dodgerblue;"">First Name:</label>
                    <input asp-for="@Model.CustFirst" class="form-control" placeholder="First Name" type="text" />
                </div>
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustMiddle" class="st1 control-label style=" color:dodgerblue;"">Middle:</label>
                    <input asp-for="@Model.CustMiddle" class="form-control" placeholder="Middle Name" type="text" />
                </div>
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustLast" class="st1 control-label style=" color:dodgerblue;"">Last Name:</label>
                    <input asp-for="@Model.CustLast" class="form-control" placeholder="Last Name" type="text" />
                </div>
            </div> <!-- end row 2 -->

            <div class="row justify-content-md-left">
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustEmail" class="st1 control-label style=" color:dodgerblue;"">Email:</label>
                    <input asp-for="@Model.CustEmail" class="form-control" placeholder="Email" type="text" />
                </div>
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustPhone" class="st1 control-label style=" color:dodgerblue;"">Phone:</label>
                    <input asp-for="@Model.CustPhone" class="form-control" placeholder="Phone" type="text" />
                </div>
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustGender" class="st1 control-label style=" color:dodgerblue;"">Gender:</label>
                    <select asp-for="@Model.CustGender" asp-items="@Genders" class="form-control"></select>

                </div>
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.ScreenBirthDate" class="st1 control-label style=" color:dodgerblue;"">Birth Date:</label>
                    <input asp-for="@Model.ScreenBirthDate" class="form-control" placeholder="mm/dd/yyyy" type="text" />
                </div>

            </div> <!-- end row 2 -->

            <div class="row justify-content-md-left">
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustAddr1" class="st1 control-label style=" color:dodgerblue;"">Address 1:</label>
                    <input asp-for="@Model.CustAddr1" class="form-control" placeholder="Address 1" type="text" />
                </div>
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustAddr2" class="st1 control-label style=" color:dodgerblue;"">Address 2:</label>
                    <input asp-for="@Model.CustAddr2" class="form-control" placeholder="Address 2" type="text" />
                </div>
            </div> <!-- end row 4 -->

            <div class="row justify-content-md-left">
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustCity" class="st1 control-label style=" color:dodgerblue;"">City:</label>
                    <input asp-for="@Model.CustCity" class="form-control" placeholder="City" type="text" />
                </div>
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustState" class="st1 control-label style=" color:dodgerblue;"">State:</label>
                    <select asp-for="@Model.CustState" asp-items="@States" class="form-control"></select>
                </div>
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.CustZip" class="st1 control-label style=" color:white;"">Zip:</label>
                    <input asp-for="@Model.CustZip" class="form-control" placeholder="Zip" type="text" />
                </div>
                <div class="col-xs-3">
                    <label style="color:dodgerblue;" asp-for="@Model.PromotionCode" class="st1 control-label style=" color:dodgerblue;>Promotion Code</label>
                    <input asp-for="@Model.PromotionCode" class="form-control" placeholder="Promotion Code" type="text" />
                </div>
            </div> <!-- end row 5 -->

            <div class="bn row" style="margin-left:200px; margin-top:25px;">
                <button type="submit" class="b1 btn btn-primary">Register Now</button>
            </div>

            <!--div id="val" class="row col-md-6 justify-content-md-center" style="margin-left:125px; margin-top:25px;">
                <div style="color:white" asp-validation-summary="All" displaymode="singleparagraph">
                </div>
             </!--div>  -->

            <div class="row col-md-10 justify-content-md-center" style="margin-top:5px;">
                <div style="color:burlywood">
                    @ViewData["Message"]
                </div>
            </div>

            <br />


        </div>
    </div> }








